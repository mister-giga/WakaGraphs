@using WakaGraphs.Templates.Models
@using Humanizer;
@model AllTimeData

<svg xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' style='isolation:isolate;' viewBox='0 0 500 200' width='500px' height='200px'>
    <style type="text/css">
		@@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,700);

		@@keyframes fadein {
			0% { opacity: 0; }
			100% { opacity: 1; }
		}

		text {
			font-family: "Open Sans", Roboto, system-ui, sans-serif;
			font-weight:700;
			font-style:normal;
			stroke:none;
			dominant-baseline: middle;
		}

		.title{
			font-size:19px;
			fill: #9e9e9e;
			text-anchor: start;
		}

		.content {
			font-size:25px;
			fill: #fefefe;
			text-anchor: end;
		}
    </style>
    <g>
        <g style='isolation:isolate'>
            <rect x="1" y="1" width="498" height="198" rx="5" style='stroke: #e4e2e2; fill: #151515;' stroke-width="2" />
        </g>
        <g style='isolation:isolate'>
            <g transform='translate(10,25)' style='opacity: 0; animation: fadein 2s ease forwards 0.2s;'>
                <text class="title">
                    Last active:
                </text>
                <text x='480' y='27' class="content">
                    @Model.LastActive.Humanize()
                </text>
            </g>

            <g transform='translate(10,85)' style='opacity: 0; animation: fadein 2s ease forwards 0.5s;'>
                <text class="title">
                    Total time spent:
                </text>
                <text x='480' y='27' class="content">
                    @Model.TotalTimeSpent.Humanize(3, false)
                </text>
            </g>

            <g transform='translate(10,145)' style='opacity: 0; animation: fadein 2s ease forwards 0.8s;'>
                <text class="title">
                    Member since:
                </text>
                <text x='480' y='27' class="content">
                    @Model.MemberSince.ToString("MMM dd yyyy h:mmtt")
                </text>
            </g>
        </g>
    </g>
</svg>